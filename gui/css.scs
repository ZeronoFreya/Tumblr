@import "common.scs";
@const width: 800dip;
@const li-width: 150dip;

html {
    padding: 5dip;
    background: transparent;
    /*background: gold;*/
    width: @width;
    height: width(61.8%);
}

body {
    size: *;
    border-radius: 5px;
    background: @bg_color;
    overflow: hidden;
    position: relative;
}

header {
    height: 30dip;
    width: *;
    flow: horizontal;
}

section {
    height: *;

}

footer {
    height: 20dip;
}

ul {
    /*prototype: UlCtrl url("ulctrl.tis");*/
    flow: horizontal-wrap;
    border-spacing: 10dip;
    size: *;
    overflow: hidden;
    overflow-y: scroll-indicator;
    /*overflow-y: auto;*/
    padding: 5dip;
    background: @light_gray;
}

li {
    prototype: loadImageToLi url("loadimagetoli.tis");
    /*prototype: loadImageToLi;*/
    /*aspect: loadImageToLi url("loadimagetoli.tis");*/
    width: @li-width;
    height: width(100%);
    border-radius: 5dip;
    /*background: gold;*/
    /*style-set: set-background;*/
    @LI-BACKGROUND;
    background-color: #ffffff;
    background-size: contain;
    box-shadow: 1px 2px 5px -1px rgba(0, 0, 0, .3);
    /*background-image :url(icon.png);*/
    position: relative;
    overflow: hidden;
    /*cursor:url(img/magnifier.svg) 48 48;*/
    cursor:url(img/magnifier.png) 16 16;
}
li:hover{
    background-size:auto;
    transition: background-size(linear, 200ms);
}
