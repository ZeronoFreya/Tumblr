}
.loading{
    width: @li-width;
    height: width(100%);
     @LI-BACKGROUND;
     background-color: #ffffff;
     background-size: 16 16;
     background-image:url(img/loading.png);
     border-radius: 5dip;
     box-shadow: 1px 2px 5px -1px rgba(0, 0, 0, .3);
